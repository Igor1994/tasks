<div class="container">
      <div class="row">
        <div class="col-lg-5">
          <div class="text-center">
              <% if current_user.avatar_file_size != nil%><%= image_tag current_user.avatar.url(:thumb) %><%end%>
              
              <h1><%= current_user.nickname %>
              <div class="btn-group">
                  <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#">
                   Действия
                  <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                     <li><%= link_to 'Изменить пароль', edit_user_registration_path, method: :get %>
                     <li><%= link_to 'Выйти', destroy_user_session_path, method: :delete %>
                     <li><%= link_to 'Изменить аватар', persons_avatar_update_path, method: :get %>  
                  </ul>
              </div>
              </h1>

              <p/><div class="pull-center">
              <div class="well">
                <h2>Друзья</h2>
                <p><h3>Вы добавили</h3></p>
                <p><% @friendships.each do |f|%>
                      <h4><p>
                        <%= link_to f.friend.nickname, "/users/index/#{f.friend.id}"%>
                        (<%= link_to "удалить", friendships_destroy_path(id: f), method: :delete %>)
                      </h4></p>
                    <% end %>
                </p>
                <p><h3>Вас добавили</h3></p>
                <p><% @inverse_friends.each do |f|%>
                      <h4/><p/><%= link_to f.nickname, "/users/index/#{f.id}"%>
                    <% end %>
                </div>
              </div>
          </div>
        </div>

        <div id="wall" class="col-lg-7" >
            <%= render 'person' %>
        </div>
        <div class="col-lg-7 pull-right">
          <%= form_for current_user.user_messages.new, remote: true, url: user_user_messages_path(current_user), :html => { :multipart => true }, method: :post do |f| %>
            <p/><div> <%= f.label :text, "Текст сообщения"%><br>
            <%= f.text_area :text , :style => "width: 650px; height: 100px" %>
          
            </div>
            <p><%= f.label :picture, "Прикрепить изображение", :for => "user_message_picture", :class => "btn btn-info"%>
              <%= f.file_field :picture, style: "display: none"%></p>

            <%= f.hidden_field :user_id %>

            <div><%= f.submit "Создать", :class => "btn btn-success" %></div>
          <% end %>
        </div>
        
      </div>
      <p/>
</div>



